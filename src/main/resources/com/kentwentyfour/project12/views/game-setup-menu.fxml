<VBox  style=" -fx-background-color: #4a9183;" alignment="CENTER" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kentwentyfour.project12.presentation.controllers.GameSetupController"  stylesheets="@../css/style.css">
    <StackPane>

        <GridPane  hgap="25.0" vgap="15.0" style="-fx-padding: 30px 0 0 0;">
        <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />

            </rowConstraints>

                <ComboBox fx:id="gameComboBox" styleClass="combo-box-common" promptText="Select Mode" GridPane.columnIndex="1" VBox.vgrow="ALWAYS"/>
                <ComboBox  fx:id="gameComboc" styleClass="combo-box-common" promptText="Select Map" GridPane.columnIndex="2" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <GridPane.margin>
                        <Insets right="5.0" />
                    </GridPane.margin>
                </ComboBox>

                <TextField styleClass="text-field-common"  fx:id="ballRadiusField" promptText="Ball Radius" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField styleClass="text-field-common" fx:id="startXField" promptText="Start X" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <TextField styleClass="text-field-common" fx:id="startYField" promptText="Start Y" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <TextField styleClass="text-field-common" fx:id="targetRadiusField" promptText="Target Radius" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField styleClass="text-field-common" fx:id="targetXField" promptText="Target X" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <TextField styleClass="text-field-common"  fx:id="targetYField" promptText="Target Y" GridPane.columnIndex="2" GridPane.rowIndex="4" />



                <TextField styleClass="text-field-common" fx:id="formulaField" promptText="Formula" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <TextField styleClass="text-field-common" fx:id="kineticfrictiongrass" promptText="Kinetic Friction Grass" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                <TextField styleClass="text-field-common" fx:id="kineticfrictionsand" prefHeight="31.0" prefWidth="148.0" promptText="Kinetic Friction Grass " GridPane.columnIndex="1" GridPane.rowIndex="8" />

                <TextField styleClass="text-field-common" fx:id="staticfrictionsand" promptText="Static Friction Sand" GridPane.columnIndex="2" GridPane.rowIndex="7" />
                <TextField styleClass="text-field-common" fx:id="staticfrictiongrass" promptText="Static Friction Sand " GridPane.columnIndex="2" GridPane.rowIndex="8" />

                <Button  styleClass="button-common"  onAction="#onStartGameButtonClick" prefHeight="30.0" prefWidth="103.0" text="Start Game" GridPane.columnIndex="1" GridPane.rowIndex="10" />


                <StackPane prefHeight="18.0" prefWidth="73.0" GridPane.columnIndex="2" GridPane.rowIndex="12" />
        </GridPane>
    </StackPane>
